[sub_resource type="GDScript" id="GDScript_puzzle"]
script/source = "extends Node

@onready var plate1 := get_node(\"../PressurePlates/Plate1\")
@onready var plate2 := get_node(\"../PressurePlates/Plate2\")
@onready var gate := get_node(\"../PuzzleGate\")

var _plate1_active: bool = false
var _plate2_active: bool = false

func _ready() -> void:
	if plate1:
		plate1.activated.connect(_on_plate1_activated)
		plate1.deactivated.connect(_on_plate1_deactivated)
	if plate2:
		plate2.activated.connect(_on_plate2_activated)
		plate2.deactivated.connect(_on_plate2_deactivated)

func _on_plate1_activated() -> void:
	_plate1_active = true
	_check_puzzle()

func _on_plate1_deactivated() -> void:
	_plate1_active = false
	_check_puzzle()

func _on_plate2_activated() -> void:
	_plate2_active = true
	_check_puzzle()

func _on_plate2_deactivated() -> void:
	_plate2_active = false
	_check_puzzle()

func _check_puzzle() -> void:
	if _plate1_active and _plate2_active:
		if is_instance_valid(gate):
			gate.queue_free()
			print(\"GODMACHINE: Puzzle solved â€” barrier dissolved\")
"